<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_battle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.kleiren.eolo.Battle"
    android:background="@drawable/ic_backgroud_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.82">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:id="@+id/layout_enemy">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_base"
                    android:id="@+id/imageView3"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="none|textPersonName"
                    android:text=""
                    android:fontFamily="casual"
                    android:ems="10"
                    android:id="@+id/enemyname"
                    android:background="@drawable/ic_nameplate"
                    android:paddingLeft="10dp"
                    android:paddingBottom="15dp"
                    android:textSize="24sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    app:srcCompat="@drawable/ic_asrobot_pix"
                    android:id="@+id/imageView6"
                    android:layout_width="150dp"
                    android:layout_marginBottom="11dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/enemyhp"
                    android:layout_toEndOf="@+id/enemyhp"
                    android:layout_height="150dp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_lifebar"
                    android:id="@+id/enemyhp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_alignBottom="@+id/enemyname"
                    android:layout_alignRight="@+id/enemyname"
                    android:layout_alignEnd="@+id/enemyname"
                    android:layout_marginBottom="11dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/layout_player">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_base"
                    android:id="@+id/imageView4"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text=""
                    android:layout_height="wrap_content"
                    android:id="@+id/playername"
                    android:background="@drawable/ic_nameplate"
                    android:paddingBottom="15dp"
                    android:fontFamily="casual"
                    android:paddingLeft="10dp"
                    android:textSize="24sp"
                    android:layout_above="@+id/imageView4"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="175dp" />

                <ImageView
                    android:layout_width="@dimen/enemy"
                    android:layout_height="@dimen/enemy"
                    app:srcCompat="@drawable/ic_rednamrahc"
                    android:id="@+id/imagePlayer"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/playername"
                    android:layout_toStartOf="@+id/playername"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp" />

                <ImageView
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_lifebar"
                    android:id="@+id/imageView"
                    android:layout_marginBottom="11dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_width="85dp"
                    android:layout_alignBottom="@+id/playername"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_alignParentBottom="true"
                android:id="@+id/infotext"
                android:background="@drawable/ic_text_background"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textColor="@android:color/background_light"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1">

                <Button
                    android:text="Attack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"

                    android:id="@+id/btn_attack"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"

                    android:background="@drawable/ic_text_background"
                    android:onClick="attack"
                    android:layout_marginRight="5dp" />

                <Button
                    android:text="Flee"
                    android:layout_width="wrap_content"
                    android:fontFamily="casual"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/background_light"
                    android:id="@+id/btn_flee"
                    android:layout_weight="1"
                    android:background="@drawable/ic_text_background" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
